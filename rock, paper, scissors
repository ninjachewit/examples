import random

while True:
    playerans = input("Rock, paper, or scissors? ")
    compans = random.randint(1, 3)
    print(compans)
    
    if compans == 1:
        if playerans.lower() == "rock":
            print("Comp chose rock. Tie!")
        elif playerans.lower() == "paper":
            print("Comp chose rock. You win!")
        elif playerans.lower() == "scissors":
            print("Comp chose rock. You lose!")
    elif compans == 2:
        if playerans.lower() == "rock":
            print("Comp chose paper. You lose!")
        elif playerans.lower() == "paper":
            print("Comp chose paper. Tie!")
        elif playerans.lower() == "scissors":
            print("Comp chose paper. You win!")
    elif compans == 3:
        if playerans.lower() == "rock":
            print("Comp chose scissors. You win!")
        elif playerans.lower() == "paper":
            print("Comp chose scissors. You lose!")
        elif playerans.lower() == "scissors":
            print("Comp chose scissors. Tie!")
